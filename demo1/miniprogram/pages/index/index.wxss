/* miniprogram/pages/index/index.wxss */
.swp{
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}
.swp_a{
    width: 96%;
}
.fun{
    width: 96%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
    margin-top: auto;
}
.fun_title{
    width: 96%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
    font-weight: 600;
}
.fun_a{
    width: 96%;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
}


.fun_left{
    width: 48%;
    height: 400rpx;
    background-color: burlywood;
    border-radius: 10rpx;
}
.fun_right{
    width: 48%;
    height: 400rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-around;
    border-radius: 10rpx;
}
.fun_right_a{
    width: 100%;
    height: 198rpx;
    background-color: purple;
    border-radius: 10rpx;
}
.fun_right_b{
    width: 100%;
    height: 198rpx;
    background-color: red;
    border-radius: 10rpx;
}

.grid{
    width: 100%;
    height: 100rpx;
    display: flex;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
    margin-top: 10rpx;
}
.pro{
    width: 96%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
    margin-top: 10rpx;
}

.pro_all{
    width: 96%;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    margin-top: 30rpx;
}
