/* miniprogram/pages/index/index.wxss */
.swp{
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}
.swp_a{
    width: 94%;
}
.fun{
    width: 96%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
    margin-top: auto;
}
.fun_title{
    width: 96%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
    font-weight: 600;
}
.fun_a{
    width: 96%;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
}


.fun_left{
    width: 48%;
    height: 400rpx;
    background-color: burlywood;
    border-radius: 10rpx;
    overflow: hidden;
}
.fun_left_img{
    width: 100%;
    height: 400rpx;
}
.fun_right{
    width: 48%;
    height: 400rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-around;
    border-radius: 10rpx;
}
.fun_right_a{
    width: 100%;
    height: 198rpx;
    background-color: purple;
    border-radius: 10rpx;
}
.fun_right_a_img{
    width: 100%;
    height: 190rpx;
}
.fun_right_b_img{
    width: 100%;
    height: 190rpx;
}
.fun_right_b{
    width: 100%;
    height: 198rpx;
    background-color: red;
    border-radius: 10rpx;
}

.grid{
    width: 100%;
    height: 100rpx;
    display: flex;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
    margin-top: 10rpx;
}
.pro{
    width: 96%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
    margin-top: 10rpx;
}

.pro_all{
    width: 96%;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    margin-top: 30rpx;
    flex-wrap: wrap;
}
.pro_detail{
    width: 42%;
    padding: 20rpx;
    box-shadow: 5rpx 5rpx 10rpx #888888;
    border-radius: 10rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: flex-start;
    flex-wrap: wrap;
}
.pro_img{
    width: 100%;
    height: 300rpx;
    border-radius: 10rpx;
}
.search_case{
    width: 90%;
    height: 600rpx;
    background-color: #ffffff;
    position: fixed;
    top: 100rpx;
    z-index: 999;
}
.case{
    background-color: white;
    border-radius: 10rpx;
    box-shadow: 5rpx 5rpx 10rpx #888888;
    font-size: 25rpx;
    color: #888888;
}
.g_img{
    width: 90rpx;
    height: 90rpx;
    border-radius: 10rpx;
}